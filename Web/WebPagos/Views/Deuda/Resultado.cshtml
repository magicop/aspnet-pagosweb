@using WebPagos.Models.DTO
@model List<WebPagos.Models.DTO.Deuda>


<br />
<center><h1>Detalle Deudas</h1></center>
<br />


@{ if (Model.Count() > 0)

    {
        <table id="TblDeudas" class="table display nowrap table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Folio Pago</th>
                    <th scope="col">Per. Remun.</th>
                    <th scope="col">Subproducto</th>
                    <th scope="col">Deuda</th>
                    <th scope="col">Reajustes</th>
                    <th scope="col">Interés</th>
                    <th scope="col">Recargo</th>
                    <th scope="col">Honorarios</th>
                    <th scope="col">Pago Total</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var deuda in Model)
                {
                    <tr>
                        <td>@deuda.folioPago</td>
                        <td>@deuda.premun</td>
                        <td>@deuda.csubproducto</td>
                        <td>@deuda.mdeuda</td>
                        <td>@deuda.mreajuste</td>
                        <td>@deuda.minteres</td>
                        <td>@deuda.mrecargo</td>
                        <td>@deuda.mhonorario</td>
                        <td>@deuda.mpagototal</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No se han encontrado documentos.</p>
    }

}
